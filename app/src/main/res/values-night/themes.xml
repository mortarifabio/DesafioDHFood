<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.DHFoods" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/dark_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_salmon</item>
        <item name="colorSecondaryVariant">@color/dark_salmon</item>
        <item name="colorOnSecondary">@color/dark_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_gray</item>
    </style>

    <style name="Theme.DHFoods.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextInputLayoutDefault" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_marginBottom">@dimen/margin_half</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:textColorHint">@color/main_gray</item>
        <item name="boxBackgroundColor">@color/deep_dark_gray</item>
        <item name="boxStrokeColor">@color/main_gray</item>
        <item name="hintTextColor">@color/main_gray</item>
    </style>

    <style name="HomePage">
        <item name="android:background">@color/deep_dark_gray</item>
    </style>

    <style name="CardRestaurant">
        <item name="android:layout_marginBottom">@dimen/margin_quarter</item>
        <item name="android:layout_marginEnd">@dimen/margin_half</item>
        <item name="android:layout_marginStart">@dimen/margin_half</item>
        <item name="android:layout_marginTop">@dimen/margin_quarter</item>
        <item name="cardBackgroundColor">@color/darker_gray</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="CardRestaurantDish">
        <item name="android:layout_marginBottom">@dimen/margin_quarter</item>
        <item name="android:layout_marginEnd">@dimen/margin_quarter</item>
        <item name="android:layout_marginStart">@dimen/margin_quarter</item>
        <item name="android:layout_marginTop">@dimen/margin_quarter</item>
        <item name="cardBackgroundColor">@color/deep_dark_gray</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">0dp</item>
    </style>

</resources>